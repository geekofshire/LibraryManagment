extends layout 
block content 
  h1 #{title} : #{book.title}
  a(href=book.author.url) #{book.author.name}

  if book_instances.length 
    p #[strong Delete Following Book Instances before attemping to delete this book]
    div(style="left-margin:20px;top-margin:20px")
      h4 #[strong Instances]
      dl 
        each ins in book_instances
          dt
            a(href=ins.url) #{ins.imprint}
  else 
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete